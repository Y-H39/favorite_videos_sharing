<h3>一覧</h3>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>URL</th>
      <th>コメント</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.post_name %></td>
        <td><%= post.url %></td>
        <td><%= post.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規投稿", :new_post %></p>
